<div class="comment cf">
  <div class="content">
    <p class="comment_content">
      <%= markdownify beppucomment.comment %>
    </p>
    <p class="comment_author">
      <%= link_to beppucomment.student.email, beppucomment.student %>
    </p>
  </div>
  <div id="edit_button">
    <% if current_student && beppucomment.student == current_student %>
      <%= link_to "Edit", edit_beppupost_beppucomment_path(beppucomment.beppupost, beppucomment) %>
      <%= link_to "Delete", [beppucomment.beppupost, beppucomment], method: :delete, data: { confirm: "Are you sure?" } %>

    <% end %>

  </div>
</div>
