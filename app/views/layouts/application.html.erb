<!DOCTYPE html>
<html>
<head>
  <title>BirdCity</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet" type="text/css"></link>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet"></link>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if alert %>
    <div id="notice_wrapper">
      <p class="alert"><%= alert %></p>
    </div>

    <% elsif notice %>
    <div id="notice_wrapper">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>

    <%= render 'layouts/header'; %>

    <!-- <% unless current_page?(root_path) %> -->



    <!-- <% end %> -->



<%= yield %>
<script>
  $(document).ready(function(){
    setTimeout(function() {
        $('#notice_wrapper').fadeOut("slow", function() {
          $this.remove();
        });
    }, 1000 );
  });

</script>
<%= render 'layouts/footer'; %>


<br>
<div class="wrapper_wide">
            <br>
  <!-- Birdsinthatcity works best on Chrome. -->

   <!-- <br><br> -->



  Byungwook SO Production. Contact : byunso09@apu.ac.jp <br><br>
  <%= link_to  "BirdsInThatCity", "https://www.facebook.com/groups/birdsinthatcity" %>
</div>
<br><br><br>
</body>



</html>
