

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
                In SouthEastAsia forum, you can <br>
                1. Share whatâ€™s happening in your city and school! <br>
                2. or Just meet up with other students by sharing your schedule!
                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<%= link_to "New Post", new_southpost_path, class: "button button_highlight" %>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @southposts.each do |southpost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= image_tag southpost.photo.url(:medium) %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to southpost.title, southpost %></h2>
							<p class="description"><%= truncate(southpost.content, length: 300) %></p>
							<p class="description">Written By <%= southpost.student.email %></p>
							<p class="description"><%= local_time_ago southpost.created_at %></p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @southposts, previous_label: "Previous", next_label: "Next" %>
