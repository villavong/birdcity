

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
									Yo SEA, What're you up to? lol

                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<div class="cf">
			<%= link_to "New Post", new_southpost_path, class: "button button_highlight" %>

		</div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @southposts.each do |southpost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(southpost.photo.url(:medium)), southpost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to southpost.title, southpost %></h2>
							<p class="description"><%= truncate(southpost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to southpost.student.email, southpost.student %>, <%= time_ago_in_words(southpost.created_at)  %> ago, <%= southpost.southcomments.count %> comments </p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @southposts, previous_label: "Previous", next_label: "Next" %>
