

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
									Hey, bored people in Beppu, <br><br>What're you up to? lol

                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
	 <div class="cf">
		 <%= link_to "New Post", new_beppupost_path, class: "button button_highlight" %>

	 </div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @beppuposts.each do |beppupost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(beppupost.photo.url(:medium)), beppupost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to beppupost.title, beppupost %></h2>
							<p class="description"><%= truncate(beppupost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to beppupost.student.email, beppupost.student %>, <%= time_ago_in_words(beppupost.created_at)  %> ago, <%= beppupost.beppucomments.count %> comments </p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @beppuposts, previous_label: "Previous", next_label: "Next" %>
