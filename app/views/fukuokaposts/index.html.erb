

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
									Yo, What're you up to? lol
                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<div class="cf">
			<%= link_to "New Post", new_fukuokapost_path, class: "button button_highlight" %>

		</div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @fukuokaposts.each do |fukuokapost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(fukuokapost.photo.url(:medium)), fukuokapost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to fukuokapost.title, fukuokapost %></h2>
							<p class="description"><%= truncate(fukuokapost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to fukuokapost.student.email, fukuokapost.student %>, <%= time_ago_in_words(fukuokapost.created_at)  %> ago, <%= fukuokapost.fukuokacomments.count %> comments </p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @fukuokaposts, previous_label: "Previous", next_label: "Next" %>
