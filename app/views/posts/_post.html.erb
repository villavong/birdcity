<div class="comment cf">
  <div class="content">
    <p class="comment_content">
      <%= markdownify thaicomment.comment %>
    </p>
    <p class="comment_author">
      <%= link_to thaicomment.student.email, thaicomment.student %>
    </p>
  </div>
  <div id="edit_button">
    <% if current_student && thaicomment.student == current_student %>
      <%= link_to "Edit", edit_thaipost_thaicomment_path(thaicomment.thaipost, thaicomment) %>
      <%= link_to "Delete", [thaicomment.thaipost, thaicomment], method: :delete, data: { confirm: "Are you sure?" } %>

    <% end %>

  </div>
</div>
