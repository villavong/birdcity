

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
									Korea, What're you up to?

							</h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<div class="cf">
			<%= link_to "New Post", new_eastpost_path, class: "button button_highlight" %>

		</div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @eastposts.each do |eastpost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(eastpost.photo.url(:medium)), eastpost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to eastpost.title, eastpost %>
</h2>
							<p class="description"><%= truncate(eastpost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to eastpost.student.email, eastpost.student %>, <%= time_ago_in_words(eastpost.created_at)  %> ago, <%= eastpost.eastcomments.count %> comments </p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<div class="wrapper_short">

<h4>Search for Title</h4>

<%= form_tag('/eastposts', method: :get) do %>
  <p>
    <%= text_field_tag :search, nil, placeholder: "Search" %>
    <br><br>

	  <p><%= submit_tag("Search", class: "button button_highlight") %></p>

  </p>
<% end %>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @eastposts, previous_label: "Previous", next_label: "Next" %>
