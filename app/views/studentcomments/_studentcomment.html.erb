<div class="comment cf">
  <div class="content">
    <p class="comment_content">
      <%= markdownify studentcomment.comment %>
    </p>
    <p class="comment_author">

      <% if studentcomment.author_id == studentcomment.student_id %>
          <%= studentcomment.author_email  %>

      <% elsif  %>
          <%= link_to studentcomment.author_email, @authorstudent  %>

      <% end %>

    </p>




  </div>
  <div id="edit_button">
    <% if current_student.id && studentcomment.author_id == current_student.id %>

      <%= link_to "Edit", edit_student_studentcomment_path(studentcomment.student, studentcomment) %>
      <%= link_to "Delete", [studentcomment.student, studentcomment], method: :delete, data: { confirm: "Are you sure?" } %>


    <% end %>

  </div>
</div>
