<div class="cf">


</div>

<div id="posts" class="cf">
  <div class="wrapper_wide">
    <ul class="cf">
      <% @student.each do |student| %>
        <%= link_to student.post do %>
          <li>
						<% if student.post.photo.present? %>
              <%= image_tag student.post.photo.url(:medium) %>
            <% end %>
            <div class="post_overview">
              <h2><%= student.post.title %></h2>
              <h3><%= truncate(studentpost.content, length: 20) %></h3>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <%= render "posts/form" %>
  </div>





<div class="wrapper_skinny">
    <div id="post_content">
      <div id="comments" class = "cf">
      <h2>
        <%= @student.studentcomments.count %>
        Comments
      </h2>
          <%= render @student.studentcomments %>
          <%= render "studentcomments/form" %>
      </div>
    </div>
</div>
