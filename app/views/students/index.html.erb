
<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
        <h1>
					<!-- Welcome! this site is for connecting <br> exchange and local students! <br><br> -->
					Phonebook for APU and other students. <br><br>
					Send email before visiting their city and <br><br>
					Buy Coffee or Lunch <br><br>
					to ask more about the city face to face when you arrive!!

										</h1>

		</div>
	</div>
</div>




<div class="wrapper_skinny">

<h1> Search for New Friend!! </h1><h4>Type City or School or Major - (ex: 'Seoul' or 'Columbia' or 'Film')
 </h4>



<%= form_tag('/students', method: :get) do %>
  <p>
		<p><%= submit_tag("Search!!", class: "button button_highlight") %></p>

    <%= text_field_tag :search, nil, placeholder: "Search" %>
    <br><br>
  </p>
<% end %>
</div>



<%= will_paginate @students, previous_label: "Previous", next_label: "Next" %>
</br>
<div id="podcasts" class="cf">
  <div class="wrapper_wide">
    <ul class="cf">
      <% @students.each do |student| %>
        <%= link_to student do %>
          <li>
						<% if student.photo.present? %>
              <%= image_tag student.photo.url(:medium) %>


            <% end %>






            <div class="podcast_overview">
              <h2><%= student.name %></h2>
              <h2>Univ :</h2><h3><%= truncate(student.school, length: 20) %></h3>
              <h2>Now in :</h2><h3> <%= student.city %></h3>
							<!-- <h2>Bird :</h2> <h3><%= birdtype_display(student.birdtype) %></h3> -->






            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
	<div class="wrapper_skinny">
		<h4>
			Egg : Posts > 2 	<br><br>
		 Pigeon : Posts > 10, 	<br><br>
		 Eagle : Posts > 20,<br>

			<br>	Condor : Post > 50, 	<br><br>
			Alabatross : Post > 100<br><br>
			Total Student : <%= Student.all.count %>

		</h4>

	</div>




</div>
