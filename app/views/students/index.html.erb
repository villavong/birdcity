
<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
        <h1>
					<!-- Welcome! this site is for connecting <br> exchange and local students! <br><br> -->
					Ask local students before visiting  <br>their city or school. <br>
                      Their Email address is in the profile.
																			<br><br>
							Share what's happening in city forums!
										</h1>

		</div>
	</div>
</div>








<div class="wrapper_skinny">



<h1> Search </h1><h4>Type City or School - (ex: Seoul or Columbia )
 </h4>

<%= form_tag('/students', method: :get) do %>
  <p>
    <%= text_field_tag :search, nil, placeholder: "Search" %>
    <br><br>
    <p><%= submit_tag("Search") %> </p>
  </p>
<% end %>
</div>
</br>
</br>
<div id="podcasts" class="cf">
  <div class="wrapper_wide">
    <ul class="cf">
      <% @students.each do |student| %>
        <%= link_to student do %>
          <li>
						<% if student.photo.present? %>
              <%= image_tag student.photo.url(:medium) %>


            <% end %>






            <div class="podcast_overview">
              <h2><%= student.name %></h2>
              <h2>Univ :</h2><h3><%= truncate(student.school, length: 20) %></h3>
              <h2>Now in :</h2><h3> <%= student.city %></h3>
							<!-- <h2>Bird :</h2> <h3><%= birdtype_display(student.birdtype) %></h3> -->






            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
	<div class="wrapper_skinny">
		<h4>
			Egg : Posts > 2 	<br><br>
		 Pigeon : Posts > 10, 	<br><br>
		 Eagle : Posts > 20,<br>

			<br>	Condor : Post > 50, 	<br><br>
			Alabatross : Post > 100<br>

		</h4>

	</div>



</div>

<%= will_paginate @students, previous_label: "Previous", next_label: "Next" %>
