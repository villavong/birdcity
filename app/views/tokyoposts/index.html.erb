

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
                In tokyo/Oita forum, you can <br>
                1. Share whatâ€™s happening in your city and school! <br>
                2. or Just meet up with other students by sharing your schedule!
                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<%= link_to "New Post", new_tokyopost_path, class: "button button_highlight" %>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @tokyoposts.each do |tokyopost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(tokyopost.photo.url(:medium)), tokyopost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to tokyopost.title, tokyopost %></h2>
							<p class="description"><%= truncate(tokyopost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to tokyopost.student.email, tokyopost.student %></p>
							<p class="description"><%= time_ago_in_words(tokyopost.created_at)  %></p>



						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @tokyoposts, previous_label: "Previous", next_label: "Next" %>
