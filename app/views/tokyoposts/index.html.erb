

<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_wide">
			<br>
								<h1>
                Yo Japan, What're you up to?
                </h1>
								<p class="description"></p>

		</div>
	</div>
	<br><br>
	<div class="wrapper_skinny">
		<div class="cf">
			<%= link_to "New Post", new_tokyopost_path, class: "button button_highlight" %>

		</div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @tokyoposts.each do |tokyopost| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<%= link_to image_tag(tokyopost.photo.url(:medium)), tokyopost %>

						</div>
						<div class="episode_overview">
							<h2><%= link_to tokyopost.title, tokyopost %>, Comment : <%= tokyopost.tokyocomments.count %></h2>
							<p class="description"><%= truncate(tokyopost.content, length: 300) %></p>
							<p class="description">Written By <%= link_to tokyopost.student.email, tokyopost.student %>, <%= time_ago_in_words(tokyopost.created_at)  %> ago, <%= tokyopost.tokyocomments.count %> comments </p>




						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<div class="wrapper_short">

<h4>Search for Title</h4>

<%= form_tag('/tokyoposts', method: :get) do %>
  <p>
    <%= text_field_tag :search, nil, placeholder: "Search" %>
    <br><br>
    <p><%= submit_tag("Search") %> </p>
  </p>
<% end %>
</div>

<div class="comment">
	<div id="edit_button">
	</div>
</div>
<%= will_paginate @tokyoposts, previous_label: "Previous", next_label: "Next" %>
