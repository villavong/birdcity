<div class="comment cf">
  <div class="content">
    <p class="comment_content">
      <%= markdownify southcomment.comment %>
    </p>
    <p class="comment_author">
      <%= link_to southcomment.student.email, southcomment.student %>
    </p>
  </div>
  <div id="edit_button">
    <% if current_student && southcomment.student == current_student %>

      <%= link_to "Edit", edit_southpost_southcomment_path(southcomment.southpost, southcomment) %>
      <%= link_to "Delete", [southcomment.southpost, southcomment], method: :delete, data: { confirm: "Are you sure?" } %>


    <% end %>

  </div>
</div>
